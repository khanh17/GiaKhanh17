#include <iostream>
using namespace std;
void convert_dec_to_bin(int n){
    int binary_num[32];
    int i=0;
    while (n>0){
        binary_num[i]=n%2;
        n=n/2;
        i++;
    }   

    for(int j=i-1;j>=0;j--){
        cout<<binary_num[j];
    }
}
int main() {
    int n;
    cout<<"input your decimal number:";
    cin >>n;
    cout<<"your binary number:";
    convert_dec_to_bin(n);

    return 0;
}
