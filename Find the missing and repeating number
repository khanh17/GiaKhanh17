#include<iostream>
#include<bits/stdc++.h>
using namespace std;
void repeating_and_missing(int arr[],int length){
	cout <<"the repeating element is:";
	for(int i=0;i<length;i++){
		if(arr[abs(arr[i])-1]>0){
			arr[abs(arr[i])-1]=-arr[abs(arr[i])-1];
		}
		else{
			cout << abs(arr[i])<<endl;
		}
		
	}
	cout <<"the missing elemetn is:";
	for(int i=0;i<length;i++){
		if(arr[i]>0){
			cout << i+1;
		}
	}
}

int main(){
	int arr[] = { 7, 3, 4, 5, 5, 6, 2 };
	int length=sizeof arr/sizeof arr[0];
	repeating_and_missing(arr,length);
}
