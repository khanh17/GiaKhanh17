#include <iostream>
using namespace std;
int getsmallestinterger(int a[],int length){
		int sum=1;
    for(int i=0;i <length;i++){
        if(a[i]<=sum){
            sum+=a[i];
        }
    }
    return sum;
}
int main() {
    int a[]={1,2,3,10} ;
    int length= sizeof a/sizeof a[0];
    cout <<getsmallestinterger( a, length);
    return 0;
}
