#include <iostream>
#include<bits/stdc++.h>
using namespace std;

void second_largest(int a[],int length){
  sort(a,a+length);
  if(length<2){
	cout<<"In valid input";
  }
  for(int i=length-1;i>=0;i--){
	if(a[i]!=a[length-1]){
		cout<<"the second largest element array " <<a[i];
		return;
	}
	
  }
  
}
int main() { 
    int a[]={2,14,5,21,8,6,7,21,21};
    int length=sizeof a/sizeof a[0];
	second_largest(a,length);
    
    return 0;
}
